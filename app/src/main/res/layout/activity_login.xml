<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mpti"
        app:tint="@color/main" />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="50dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <EditText
         android:layout_marginLeft="50dp"
         android:layout_marginRight="50dp"

         android:backgroundTint = "@color/main"

         android:layout_marginTop="50dp"
         android:textColor="@color/main"
         android:id="@+id/loginActivity_edittext_id"
         android:hint="아이디"
         android:textColorHighlight="@color/main"
         android:textColorHint="@color/main"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <EditText
         android:backgroundTint = "@color/main"
         android:layout_marginLeft="50dp"
         android:layout_marginRight="50dp"
         android:textColorHint="@color/main"
         android:layout_marginTop="20dp"
         android:textColor="@color/main"
         android:id="@+id/loginActivity_edittext_password"
         android:hint="패스워드"
         android:inputType="textPassword"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

 </com.google.android.material.textfield.TextInputLayout>
    <Button

        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Login"
        android:background="@drawable/ic_left_bubble"
        android:id="@+id/loginActivity_button_login"
        android:layout_width="match_parent"
        android:textStyle="bold"

        android:layout_height="30dp"/>
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#888888"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="회원가입"
        android:background="@color/white"
        android:id="@+id/loginActivity_button_signup"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
</LinearLayout>