<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.friendship.Friendship_Result">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_gravity="right"
        android:id="@+id/textView"
        android:layout_marginRight="10dp"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/friendship_logo"
        android:gravity="right"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신의 우정 페르소나는 "
        android:layout_marginBottom="20dp"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/mbti_result_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friendship_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INTJ"
            android:textStyle="bold"
            android:textColor="@color/main"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.151" />
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/main"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다"/>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/friendship_explain"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="연애를 할 때는 자신의 감정에
솔직한 편인 당신,\n첫 인상을 아주 중요하게 생각하는군요!"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="당신과 환상의 짝궁은.."
        android:textColor="@color/main" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/main"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/mbti_couple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/result_save"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="프로필에 저장하기"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:background="@drawable/result_logo"
                    />
                <Button
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/result_ok"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="저장하지 않고 넘어가기"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:background="@drawable/result_logo"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>