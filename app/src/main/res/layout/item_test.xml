<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.MainFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">
            <ImageView
                android:paddingLeft="120dp"
                android:paddingRight="120dp"
                android:src="@drawable/test_about_mpti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/main"></ImageView>
        </LinearLayout>


    <TextView
        android:fontFamily="@font/red_hat"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 페르소나에 대해\n알아보는 시간"
        android:textColor="@color/black"
        android:layout_gravity="center|left"
        android:textSize="25dp" />
<TextView
    android:layout_marginTop="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:text="여러 테스트를 통해 여러분의 페르소나를 발견해보세요!"
    android:layout_marginBottom="30dp"
    />
    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/pager_images"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:ci_drawable="@drawable/background_color"
        app:ci_height="7dp"
        app:ci_margin="4dp"
        app:ci_width="7dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:textSize="13dp"
                android:fontFamily="@font/red_hat"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:id="@+id/friendship_test_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:background="@drawable/result_logo"
                android:text="Friendship"/>
            <Button
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:fontFamily="@font/red_hat"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/white"
                android:background="@drawable/result_logo"
                android:textStyle="bold"
                android:id="@+id/love_test_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Love" />
            <Button
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:fontFamily="@font/red_hat"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/white"
                android:background="@drawable/result_logo"
                android:textStyle="bold"
                android:id="@+id/work_test_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Work" />
</LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>