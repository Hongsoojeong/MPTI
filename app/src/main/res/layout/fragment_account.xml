<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/your_profile"
            />
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/AccountFragment_profile_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/uploadimage"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/Fragment_account_profile_mpti"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="MPTI"
        android:textColor="#2E3073"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_above="@+id/AccountFragment_profile_image"
        />
    <TextView
        android:textColor="#232325"
        android:padding="20dp"
        android:id="@+id/state_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태메세지"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints"
      />
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#515151"
        android:id="@+id/accountFragment_butto_comment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/AccountFragment_profile_image"
        android:text="상태 메세지 변경"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/accountFragment_butto_logout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="645dp" />

    <Button
        android:layout_gravity="center"
        android:textColor="#515151"
        android:textStyle="bold"
        android:id="@+id/accountFragment_butto_logout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/accountFragment_butto_comment"
        android:text="로그아웃"/>
</LinearLayout>


</LinearLayout>