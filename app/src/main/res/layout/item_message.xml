<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/messageItem_linearlayout_main">

    <LinearLayout
        android:id="@+id/messageItem_LinearLayout_destination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messageItem_textView_name"
        android:text="이름"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/messageItem_imageview_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/item_message_linearLayout"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="메세지"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/messageItem_textView_message"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messageItem_textview_readCounter_left"
            android:text="1"
            android:textSize="10dp"
            android:visibility="invisible"
            android:textStyle="bold"

            android:layout_margin="2dp"
            android:textColor="#FFC800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="2011.11.11 11:11"
        android:textSize="9dp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageItem_textview_timestap"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/messageItem_textview_readCounter_right"
            android:text="1"
            android:textSize="10dp"
            android:layout_margin="2dp"
            android:textColor="#FFC800"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>